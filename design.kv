WindowManager:
    StartScreen:
    InfoScreen:
    FoodListScreen:
    FoodSelectionScreen:
    WeightingScreen:
    MacroTrackerScreen:
    PhotoScannerScreen:

    
<StartScreen>:
    name: 'start'
    
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 20
        spacing: 20
        Label:
            text: "Welcome"
            font_size: 32

        BoxLayout:
            orientation: 'vertical'
            Button:
                text:'Macro Tracker'
                font_size: 32
                on_release: 
                    app.root.current = 'macrotracker'
                    root.manager.transition.direction = 'left'
            Button:
                text:'Food list'
                font_size: 32
                on_release: 
                    app.root.current = 'foodlist'
                    root.manager.transition.direction = 'left'
            Button:
                text:'Photo Scanner'
                font_size: 32
                on_release: 
                    app.root.current = 'photoscanner'
                    root.manager.transition.direction = 'left'
            Button:
                text:'Scale'
                font_size: 32
                on_release: 
                    app.root.current = 'weighting'
                    root.manager.transition.direction = 'left'
            


<InfoScreen>:
    name: 'info'
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        Label:
            text: "Second Screen"
            font_size: 32
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text:'Back'
                font_size: 32
                on_release: 
                    app.root.current = 'start'
                    root.manager.transition.direction = 'right'
                

